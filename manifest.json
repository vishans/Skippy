{
    "manifest_version": 3,
    "name": "Skippy",
    "version": "1.0",
    "description": "Automatically clicks the skip intro, recap or next episode button.",
    "permissions": [
      "activeTab",
      "storage",
      "scripting"
    ],
    "host_permissions": [
      "*://*.netflix.com/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://*.netflix.com/*"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ],
    "action": {
      "default_popup": "popup/popup.html",
      "default_icon": {
        "48": "icon48.png",
        "128": "icon128.png"
      },
      "default_title": "Skippy Settings"
    },
    "icons": {
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "browser_specific_settings": {
      "gecko": {
        "id": "skippy@example.com", 
        "strict_min_version": "91.0" 
      }
    }
  }
  